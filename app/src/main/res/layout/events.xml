<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".Team">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#696969"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backm"
            android:orientation="vertical"
            android:padding="10dp">

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
            <TextView
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Name"
                android:fontFamily="@font/bold"
                android:layout_marginTop="16dp"
                android:textColor="#ffff"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:text="Name"
                />
            <TextView
                android:layout_below="@+id/Name"
                android:layout_centerHorizontal="true"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post"
                android:fontFamily="@font/reg"
                android:layout_marginTop="5dp"
                android:textColor="#ffff"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_marginBottom="16dp"
                android:text="post"
                />

            <Button
                android:layout_below="@id/post"
                android:layout_gravity="center"
                android:background="@drawable/custombuttonnewlessround"
                android:text="Email"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/butemail"
                android:fontFamily="@font/bold"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:onClick="sendToEmail"

                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:elevation="30dp"
                android:drawableLeft="@drawable/ic_action_mail_whhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:layout_below="@id/post"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/custombuttonnewlessround"
                android:text="call"
                android:textColor="#fff"
                android:layout_alignParentRight="true"

                android:paddingLeft="10dp"
                android:layout_alignBottom="@+id/butemail"
                android:paddingRight="10dp"
                android:fontFamily="@font/bold"
                android:textSize="14sp"
                android:id="@+id/butcall"
                android:elevation="30dp"

                android:textAlignment="center"
                android:onClick="sendToCall"

                android:drawableLeft="@drawable/ic_action_contact_whhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>